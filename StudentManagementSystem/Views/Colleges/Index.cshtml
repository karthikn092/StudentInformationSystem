@model IEnumerable<StudentManagementSystem.Models.College>

@{
    ViewBag.Title = "Colleges";
}

<h2>Colleges</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CollegeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayName("Courses offered")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CollegeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @{
                string subjects = string.Empty;
                if (@item.Courses != null && @item.Courses.Count > 0)
                {
                    List<string> subjectNames = item.Courses.Select(x => x.CourseName).ToList();
                    subjects = string.Join(", ", subjectNames);
                    <span>@subjects</span>
                    @Html.Display(subjects)
                }
            }
           
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CollegeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CollegeId })
        </td>
    </tr>
}

</table>
